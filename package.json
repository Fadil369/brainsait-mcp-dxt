{
  "name": "brainsait-healthcare-mcp",
  "version": "1.0.0",
  "description": "HIPAA/NPHIES compliant healthcare MCP extension with FHIR R4 support",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/integration",
    "test:compliance": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/compliance",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "build": "npm run lint && npm run test",
    "validate:requirements": "node validate-requirements.js",
    "dxt:init": "dxt init",
    "dxt:pack": "dxt pack",
    "dxt:validate": "dxt validate"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "axios": "^1.6.0",
    "chalk": "^5.6.0",
    "fhir": "^4.11.1",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "healthcare",
    "fhir",
    "hipaa",
    "nphies",
    "clinical",
    "bilingual",
    "arabic",
    "compliance",
    "audit",
    "brainsait"
  ],
  "author": {
    "name": "BrainSAIT Development Team",
    "email": "dev@brainsait.com",
    "url": "https://brainsait.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fadil369/brainsait-mcp-dxt.git"
  },
  "bugs": {
    "url": "https://github.com/Fadil369/brainsait-mcp-dxt/issues"
  },
  "homepage": "https://github.com/Fadil369/brainsait-mcp-dxt"
}
